startfunction GUESS_KEY
    set MYEXT extension FNAME
    set XOR_KEY binary "\0\0"
    for x = 0
        getarray EXT 1 x
        if EXT == "" || EXT == MYEXT
            break
        endif
    next x
    if EXT == MYEXT
        getarray SIGN 2 x
        savepos TMP 1
        goto OFFSET 1
        get XSIGN short 1
        goto TMP 1
        math XSIGN ^ SIGN
        string XOR_KEY = XSIGN
    endif
endfunction
