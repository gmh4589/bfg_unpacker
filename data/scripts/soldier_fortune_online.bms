# Soldier of Fortune Online (script 0.1.1)
#   unknown algorithm to calculate the 16bit xor key, try to guess it
# script for QuickBMS http://quickbms.aluigi.org

callfunction GUESS_KEY_INIT 1

open FDDE "qpf"
get FILES long
for i = 0 < FILES
    get DUMMY long  # 10
    get ID long
    get PATH unicode
    putarray 0 i PATH
next i
get PAKS long
for PAK = 0 < PAKS
    get NAME unicode
    get SIZE long
    open FDSE NAME 1
    callfunction EXTRACT 1
next PAK

startfunction EXTRACT
    get DUMMY long 1    # 10
    get DATA_OFF long 1
    get DUMMY long 1
    get DUMMY long 1
    get SIZE long 1
    get ZERO long 1
    get FILES long 1
    for i = 0 < FILES
        get PATH_IDX long 1
        get CRC long 1
        get NAME unicode 1
        get OFFSET long 1
        get SIZE long 1
        getarray PATH 0 PATH_IDX
        string FNAME p "%s/%s" PATH NAME

        callfunction GUESS_KEY 1
        encryption xor XOR_KEY "" 0 2
        log FNAME OFFSET SIZE 1
        encryption "" ""
    next i
endfunction

