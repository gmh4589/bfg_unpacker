# extracts the StreamingSounds.asrBE from Sniper Elite V2 (Xbox 360)
# (c) 2012-05-01 by AlphaTwentyThree of XeNTaX

idstring "Asura   STSA"
endian big
get FSIZE long
get UNK long
get ZERO long
get FILES long
get DUMMY byte
goto 0x1d
for i = 1 <= FILES
   get NAME string
   if i != FILES
      FindLoc NXT string "sounds" 0 ""
   else
      FindLoc NXT string "RIFF" 0 ""
   endif
   math NXT -= 8
   goto NXT
   get SIZE long
   get OFFSET long
   log NAME OFFSET SIZE
next i