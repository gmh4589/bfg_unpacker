# Urban Chaos PS2 dir/wad

open FDDE "dir"
open FDDE "wad" 1
get GAME_WAD_SIZE asize 1
math PACK = -1

get PACKS long  # 2
get FILES long
for i = 0 < FILES
    getdstring NAME 0x40
    get SIZE long
    get OFFSET long
    math OFFSET * 0x800

    if OFFSET u>= GAME_WAD_SIZE
        math PACK + 1
        string TMP p "%03d" PACK
        open FDDE TMP 1
        get TMP asize 1
        math GAME_WAD_SIZE + TMP
    endif

    log NAME OFFSET SIZE 1
next i
