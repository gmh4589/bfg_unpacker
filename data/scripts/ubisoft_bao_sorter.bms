# Ubisoft Common_BAO_0x________/[Language]_BAO_0x________ sorter

get BAONAME basename

if BAONAME & "BAO"
	idstring "\x01\x1b\x01\x00"
	goto 0x1c
	get BAOTYPE1 long
	goto 0x24
	get BAOTYPE2-1 byte
	get BAOTYPE2-2 byte
	get BAOTYPE2-3 byte
	get BAOTYPE2-4 byte
	
	get FNAME filename
	string NAME p= "%d_%08x\%s" BAOTYPE2-4 BAOTYPE1 FNAME
	get SIZE asize
	log NAME 0 SIZE
else
	print "It is not a BAO file."
	cleanexit
endif
