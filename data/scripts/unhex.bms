# unhex - hexadecimal strings to bytes
# script for QuickBMS http://quickbms.aluigi.org

get SIZE asize
putvarchr MEMORY_FILE SIZE 0
log MEMORY_FILE 0 0
append
for OFFSET = 0 < SIZE
    get TMP line
    string TMP >= ";"   # comments
    string TMP >= "#"   # comments
    strlen TMPSZ TMP
    putdstring TMP TMPSZ MEMORY_FILE
    savepos OFFSET
next
append

get NAME filename
string NAME += ".unhex"

comtype hex
get SIZE asize MEMORY_FILE
clog NAME 0 SIZE SIZE MEMORY_FILE
