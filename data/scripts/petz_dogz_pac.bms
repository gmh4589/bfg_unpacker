# Petz Dogz 2 IM00
# script for QuickBMS http://quickbms.aluigi.org

comtype lz77wii
idstring "IM00"
get FILES long
for i = 0 <= FILES
    get OFFSET long
    putarray 0 i OFFSET
next i
for i = 0 < FILES
    getarray OFFSET 0 i
    math i + 1
    getarray SIZE   0 i
    math SIZE - OFFSET
    goto OFFSET
    get CHECK byte
    if CHECK <= 0x40
        clog "" OFFSET SIZE SIZE
    else
        log "" OFFSET SIZE
    endif
next
