# Early Polyphony Digital archives
# ---
# Motor Toon Grand Prix/Motor Toon Grand Prix 2(PS1) - MTGPX.DAT/MTGPX2.DAT
# Gran Turismo 2000(PS2) - GT2K.VOL

get DAT_SIZE asize
get EXT extension

endian big
if EXT == "DAT" || EXT == "VOL"
	do
		get NAMESZ byte
		getdstring NAME NAMESZ
		get OFFSET long
		get SIZE long
		math OFFSET * 0x800
		if NAME != ""
			log NAME OFFSET SIZE
		else
			break
		endif
		savepos CURR_OFF
	while CURR_OFF < DAT_SIZE
else
	break
endif
