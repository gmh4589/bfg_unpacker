# extracts the BIG file from Mountain Bike Adrenaline (PS2)
# (c) 2012-10-29 by AlphaTwentyThree of XeNTaX

get FILES long
get UNK long
get MULTI long
savepos INFO
set NAMEBIAS FILES
math NAMEBIAS *= 0x14
math NAMEBIAS += INFO
for i = 1 <= FILES
   get NAMEPOS long
   math NAMEPOS += NAMEBIAS
   get OFFSET long
   math OFFSET *= MULTI
   get FILE_END long
   get TYPE long
   get SIZE long
   savepos MYOFF
   goto NAMEPOS
   get NAME string
   goto MYOFF
   log NAME OFFSET SIZE
next i