endif

comtype unzip_dynamic
idstring "\x0d\xf0\xad\xde"
get FLAGS long
get INFO_SIZE long
get INFO2_SIZE long
get DUMMY long
get DUMMY long
savepos BASE_OFF

goto 0x400
getdstring DUMMY BASE_OFF
get ZERO long
get NAMES_SIZE long
get NAMES_SIZE long # same as above

xmath NAMES_LIMIT "TMP + NAMES_SIZE"
savepos TMP
