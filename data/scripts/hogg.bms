padding PADDING_SIZE
getdstring DUMMY BASE_OFF
savepos TMP
xmath INFO_LIMIT "TMP + INFO_SIZE"
math i = 0
for TMP = TMP < INFO_LIMIT
    get OFFSET longlong
    get SIZE long
    get DUMMY1 long
    get DUMMY2 long
    get ZERO long
    get TYPE long
    get ID long
    savepos TMP

    if TYPE != 0
    if TYPE != 0xffffffff
    if SIZE != 0xffffffff
    if OFFSET != 0
        if i == 0
            clog MEMORY_FILE OFFSET SIZE SIZE
            get ZERO long MEMORY_FILE
            get NAMES long MEMORY_FILE
            for j = 0 < NAMES
                get NAMESZ long MEMORY_FILE
                getdstring NAME NAMESZ MEMORY_FILE
                putarray 0 j NAME
            next j
        else
            getarray NAME 0 ID
            clog NAME OFFSET SIZE SIZE
        endif
    endif
    endif
    endif
    endif
next i
