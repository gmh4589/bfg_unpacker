goto NAMES_OFF
endian little
get DUMMY long  # NAMES, like FILES
get DUMMY long
for i = 0 < FILES
    if SIGN & "RADCORE"
        get NAMESZ long
        getdstring NAME NAMESZ
        get DUMMY long
    else    # ATG
        get DUMMY long
        get DUMMY long
        get DUMMY long
        get NAMESZ long
        math NAMESZ -= 1
        getdstring NAME NAMESZ
        get DUMMY long
    endif

    getarray OFFSET 0 i
    getarray SIZE 1 i
    log NAME OFFSET SIZE
next i
