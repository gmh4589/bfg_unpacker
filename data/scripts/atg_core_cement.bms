# script for QuickBMS http://quickbms.aluigi.org

quickbmsver "0.5.14"
#idstring "ATG CORE CEMENT LIBRARY" # also "RADCORE CEMENT LIBRARY"
get SIGN string
if SIGN & "CEMENT LIBRARY"
else
    print "Error: unknown magic %SIGN%"
    cleanexit
endif
goto 0x24
get OFFSET long
endian guess OFFSET
if SIGN & "RADCORE"
    goto OFFSET
    get FILES long
    get NAMES_OFF long
    get DUMMY long
    get DUMMY long
else    # ATG
    get INFOSZ long
    get NAMES_OFF long
    get NAMES_SIZE long
    get DUMMY long
    get FILES long
    goto OFFSET
endif

# pre-allocate arrays, don't do it because the last element is calculated in sorting
#putarray 0 FILES 0
#putarray 1 FILES 0

for i = 0 < FILES
    get CRC long
    get OFFSET long
    get SIZE long
    putarray 0 i OFFSET
    putarray 1 i SIZE
next i

# OFFSET sorting
print "sort elements, please wait"
sortarray 0 1

