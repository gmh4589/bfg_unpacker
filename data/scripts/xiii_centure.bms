# extract *.pak files from XIII Century (2008, PC)
# (c) 2012-09-14 by AlphaTwentyThree of XeNTaX

idstring "PACK"
get ZERO long
get INFO long
get ZERO long
get FILES long
goto INFO
for i = 1 <= FILES
   get OFFSET long
   get ZERO long
   get SIZE long
   get ZERO long
   get NAMEL long
   math NAMEL -= 1
   get UNK long # always 2?
   get UNK byte # always 0x2e?
   getDstring NAME NAMEL
   log NAME OFFSET SIZE
next i